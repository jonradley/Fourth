<?xml version="1.0" encoding="UTF-8"?>
<!--**************************************************************************************
 Overview

Map in the BEK fixed-width CAT format (V16)
"LPos"		start position of the field within the record
"UPos"		position of end character in field/subfield
******************************************************************************************
 Module History
******************************************************************************************
 Date         | Name       		| Description of modification
******************************************************************************************
 06/03/2013	| Harold Robson		| FB6189 Created module 
******************************************************************************************
04/04/2013	| H Robson			| FB6273 We need to keep this as flat as possible to avoid overflowing the 16bit-int recursion counter in the processor
***************************************************************************************-->
<ffsFlatFileSchema>
	<ffsSettings>
		<ffsRecordPositionType>named</ffsRecordPositionType>
		<ffsRecordSeparator>chr(13)chr(10)</ffsRecordSeparator>
		<ffsPadding/>
		<!--<ffsBatchHeader>
			<ffsHeaderRecord RecordPos="FH"/>
		</ffsBatchHeader>-->
		<ffsSplitBatchRecord RecordPos="OH"/>
	</ffsSettings>
	<ffsRoot>
		<PriceCatalog>
			<Description_Header RecordPos="OH" LPos="26" UPos="40"/>
			<RefNum RecordPos="OH" LPos="6" UPos="20"/>
			<ProductEntry>
				<PartID RecordPos="OD" LPos="8" UPos="27"/>
				<Description RecordPos="OD" LPos="58" UPos="137"/>
				<KeyVal_PackSize RecordPos="OD" LPos="147" UPos="161"/>
				<KeyVal_Group RecordPos="OD" LPos="263" UPos="292"/>
				<KeyVal_UOM RecordPos="OD" LPos="323" UPos="324"/> <!-- price uom -->
				<!-- BEK send start and end dates at line level, we'll put them here and move them in the XSL -->
				<KeyVal_StockItem RecordPos="OD" LPos="294" UPos="301"/> <!-- effective start date -->
				<KeyVal_IgnorePriceChange RecordPos="OD" LPos="302" UPos="309"/><!-- effective end date -->
				<UnitPrice RecordPos="OD" LPos="310" UPos="322"/>
			</ProductEntry>
		</PriceCatalog>
	</ffsRoot>
</ffsFlatFileSchema>
