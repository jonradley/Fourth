				<ffsNative>chr(13)</ffsNative>
				<ffsTradesimple/>
				<ffsLiteral/>
			</ffsEscapeChar>
			<ffsEscapeChar>
				<ffsNative>chr(10)</ffsNative>
				<ffsTradesimple/>
				<ffsLiteral/>
			</ffsEscapeChar>
			<ffsEscapeChar>
				<ffsNative>?=</ffsNative>
				<ffsTradesimple>¬E</ffsTradesimple>
				<ffsLiteral>=</ffsLiteral>
			</ffsEscapeChar>
			<ffsEscapeChar>
				<ffsNative>?+</ffsNative>
				<ffsTradesimple>¬P</ffsTradesimple>
				<ffsLiteral>+</ffsLiteral>
			</ffsEscapeChar>
			<ffsEscapeChar>
				<ffsNative>?:</ffsNative>
