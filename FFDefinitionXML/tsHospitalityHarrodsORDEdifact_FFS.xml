						<PurchaseOrderHeader>
							<Buyer>
								<BuyersLocationID>
									<GLN RecordPos="NAD+BY" LPos="3" SFPos="1"/>
								</BuyersLocationID>
							</Buyer>	
							<Supplier>
								<SuppliersLocationID>
									<BuyersCode RecordPos="RFF+IA" LPos="2" SFPos="2"/>
								</SuppliersLocationID>
							</Supplier>
							<ShipTo>
								<ShipToLocationID>
									<GLN RecordPos="NAD+DP" LPos="3" SFPos="1"/>
								</ShipToLocationID>
							</ShipTo>
							<PurchaseOrderReferences>
								<PurchaseOrderReference RecordPos="BGM" LPos="3"/>
								<PurchaseOrderDate RecordPos="DTM+137" LPos="2" SFPos="2"/>
								<CustomerPurchaseOrderReference RecordPos="NAD+DP" LPos="3" SFPos="1"/>
