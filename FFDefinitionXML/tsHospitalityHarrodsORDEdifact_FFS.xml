									<ffsAttribute1 name="UnitOfMeasure" RecordPos="QTY+21" LPos="2" SFPos="3"/>
								</OrderedQuantity>
								<LineValueExclVAT RecordPos="MOA+203" LPos="2" SFPos="2"/>
							</PurchaseOrderLine>
						</PurchaseOrderDetail>
					</PurchaseOrder>
				</BatchDocument>
			</BatchDocuments>
		</Batch>
	</ffsRoot>
