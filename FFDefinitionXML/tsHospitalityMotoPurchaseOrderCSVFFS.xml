<?xml version="1.0" encoding="UTF-8"?>
<!--******************************************************************
CSV Purchase Order mapperfor Moto
**********************************************************************
Name         	| Date       		| Change
*********************************************************************
A Sheppard	| 16/07/2007 	| Created
*******************************************************************-->
<ffsFlatFileSchema>
	<ffsSettings>
		<ffsRecordPositionType>named</ffsRecordPositionType>
		<ffsRecordSeparator>chr(13)chr(10)</ffsRecordSeparator>
		<ffsFieldSeparators>
			<ffsFieldSeparator>,</ffsFieldSeparator>
		</ffsFieldSeparators>
		<ffsSplitBatchRecord RecordPos="H"/>
	</ffsSettings>
	<ffsRoot>
		<PurchaseOrder>
			<TradeSimpleHeader>
				<SendersCodeForRecipient RecordPos="H" LPos="1"/>
				<SendersBranchReference RecordPos="H" LPos="7"/>
			</TradeSimpleHeader>
			<PurchaseOrderHeader>
				<ShipTo>
					<ContactName RecordPos="H" LPos="6"/>
				</ShipTo>
				<PurchaseOrderReferences>
					<PurchaseOrderReference RecordPos="H" LPos="5"/>
					<PurchaseOrderDate RecordPos="H" LPos="3"/>
				</PurchaseOrderReferences>
				<OrderedDeliveryDetails>
					<DeliveryDate RecordPos="H" LPos="4"/>
				</OrderedDeliveryDetails>
			</PurchaseOrderHeader>
			<PurchaseOrderDetail>
				<PurchaseOrderLine>
					<LineNumber RecordPos="D" LPos="4"/>
					<ProductID>
						<SuppliersProductCode RecordPos="D" LPos="2"/>
						<BuyersProductCode RecordPos="D" LPos="1"/>
					</ProductID>
					<ProductDescription RecordPos="D" LPos="3"/>
					<OrderedQuantity RecordPos="D" LPos="5">
						<ffsAttribute1 name="UnitOfMeasure" RecordPos="D" LPos="6"/>
					</OrderedQuantity>
				</PurchaseOrderLine>
			</PurchaseOrderDetail>
		</PurchaseOrder>
	</ffsRoot>
</ffsFlatFileSchema>
