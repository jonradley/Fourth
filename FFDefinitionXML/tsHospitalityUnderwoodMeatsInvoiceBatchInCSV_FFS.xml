							</InvoiceD>
						</InvoiceDetail>
						<InvoiceTrailer>
							<DocumentTotalExclVAT RecordPos="TRAIL" LPos="2"/>
							<VATAmount RecordPos="TRAIL" LPos="7"/>
						</InvoiceTrailer>
					</Invoice>
				</BatchDocument>
			</BatchDocuments>
		</Batch>
	</ffsRoot>
