<ffsFlatFileSchema>
	<ffsSettings>
		<ffsRecordPositionType>named</ffsRecordPositionType>
		<ffsRecordSeparator>chr(13)chr(10)</ffsRecordSeparator>
		<ffsFieldSeparators>
			<ffsFieldSeparator>,</ffsFieldSeparator>
		</ffsFieldSeparators>
		<ffsPadding/>
		<ffsGroups>
			<ffsGroup>
				<!--References below which MEAN RecordPos 'H' with LPos 1 would be CODED as 'D' and LPos 14 (13+1)-->
				<ffsGroupRecord RecordPos="H" FieldTotal="40"/>
				<ffsSubGroupRecord RecordPos="D" FieldTotal="39"/>
			</ffsGroup>
		</ffsGroups>
		<ffsSplitBatchRecord RecordPos="H"/>
	</ffsSettings>
	<ffsRoot>
		<Batch>
			<BatchHer/>
			<BatchDocuments>
				<BatchDocument>
					<Invoice>
						<TradeSimpleHer>
							<SendersCodeForRecipient RecordPos="H" LPos="24"/>
							<SendersBranchReference RecordPos="H" LPos="23"/>
						</TradeSimpleHer>
						<InvoiceHer>
							<Buyer>
								<BuyersLocationID>
									<BuyersCode RecordPos="H" LPos="23"/>
									<SuppliersCode RecordPos="H" LPos="3"/>
								</BuyersLocationID>
								<BuyersName RecordPos="H" LPos="17"/>
							</Buyer>
							<ShipTo>
								<ShipToLocationID>
									<SuppliersCode RecordPos="H" LPos="24"/>
								</ShipToLocationID>
								<ShipToName RecordPos="H" LPos="17"/>
							</ShipTo>
							<InvoiceReferences>
								<InvoiceReference RecordPos="H" LPos="5"/>
								<InvoiceDate RecordPos="H" LPos="6"/>
								<TaxPointDate RecordPos="H" LPos="6"/>
							</InvoiceReferences>
						</InvoiceHer>
						<InvoiceDetail>
							<InvoiceD>
								<PurchaseOrderReferences>
									<PurchaseOrderReference RecordPos="D" LPos="46	"/>
